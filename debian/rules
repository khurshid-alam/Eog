	rm -rf `pwd`/debian/eog/usr/share/eog/gir-1.0/

binary-predeb/gir1.2-eog-3.0::
	dh_girepository -ldebian/tmp/usr/share/eog/gir-1.0/ /usr/lib/eog/girepository-1.0/
